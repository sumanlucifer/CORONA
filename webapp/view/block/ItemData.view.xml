<mvc:View controllerName="cus.sd.srl.vms.controller.ItemData" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Table id="idPRTable" inset="false" items="{ path: '/PendPRListSet' }">
		<headerToolbar></headerToolbar>
		<columns>
			<Column width="3rem">
				<Text text="Item No"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Material"/>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" width="15rem">
				<Text text="Item Description"/>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
				<Text text="Quantity"/>
			</Column>
			<Column hAlign="End">
				<Text text="UOM"/>
			</Column>
			<Column hAlign="End">
				<Text text="Plant"/>
			</Column>
			<Column hAlign="End">
				<Text text="Storage Location"/>
			</Column>
			<!--<Column hAlign="End">-->
			<!--	<Text text="Status"/>-->
			<!--</Column>-->
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{bnfpo}"/>
					<Text text="{matnr}"/>
					<Text text="{maktx}"/>
					<Text text="{menge}"/>
					<Text text="{meins}"/>
					<!--<Text-->
					<!--	text="{storageloc}" />-->
					<Text text="{werks}"/>
					<Text text="{lgort}"/>
					<!--<Text text="{path:'status', formatter:'cus.sd.srl.vms.util.Formatter.Status_Value'}"/>-->
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>